<!-- Add a container to display the clicked filter's text -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3" id="listings-container">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link" data-title="<%= listing.title %>">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
              <div class="card-body">
                  <p class="card-text">
                     <b><%= listing.title %></b><br>
                     &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                     <i class="tax-info">&nbsp;&nbsp;+ 18% GST</i>
                  </p>
               </div>
         </div>
        </a>
    <% } %>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
              <div class="card-body">
                  <p class="card-text">
                     <b><%= listing.title %></b><br>
                     &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                     <i class="tax-info">&nbsp;&nbsp;+ 18% GST</i>
                  </p>
               </div>
         </div>
        </a>
    <% } %>   
</div>

<script>
    // Select all filter elements
    const filters = document.querySelectorAll('.filter');

    // Select all listing links
    const listings = document.querySelectorAll('.listing-link');

    // Select the container for listings
    const listingsContainer = document.querySelector('.row');

    // Add click event listeners to each filter
    filters.forEach(filter => {
        filter.addEventListener('click', () => {
            // Get the text inside the <p> tag of the clicked filter
            const filterText = filter.querySelector('p').innerText.toLowerCase();

            // Create arrays for matching and non-matching listings
            const matchingListings = [];
            const nonMatchingListings = [];

            // Loop through all listings and categorize them
            listings.forEach(listing => {
                const listingTitle = listing.querySelector('.card-text b').innerText.toLowerCase();
                if (listingTitle.includes(filterText)) {
                    matchingListings.push(listing);
                } else {
                    nonMatchingListings.push(listing);
                }
            });

            // Clear the listings container
            listingsContainer.innerHTML = '';

            // Append matching listings first, then non-matching listings
            matchingListings.forEach(listing => listingsContainer.appendChild(listing));
            nonMatchingListings.forEach(listing => listingsContainer.appendChild(listing));
        });
    });
</script>

<script>
    // Add event listener to the tax switch
    let taxSwitch = document.getElementById('switchCheckDefault');
        taxSwitch.addEventListener("click", () => {
            let taxInfo=document.getElementsByClassName("tax-info");   
                for(info of taxInfo){
                    if(info.style.display != "inline"){
                        info.style.display="inline";
                    } else {
                        info.style.display="none"; // Add this line to hide the tax info when clicked again
                    }
                }
        });
</script>